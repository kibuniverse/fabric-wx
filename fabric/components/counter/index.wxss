.counter-wrapper {
  padding: 44rpx;
  height: calc(100vh - 500rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-top: 4rpx;
  border-top: 2rpx solid #0000001a;
}

/* 头部样式 */
.counter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 120rpx;
}

.counter-name-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.counter-name {
  max-width: 320rpx;
  font-size: 32rpx;
  color: var(--main-default-gray);
}

.counter-delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 46rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.delete-text {
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 14px;
  line-height: 22px;
  color: #b22222e5;
}

.target-count {
  flex-shrink: 0;
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
}

/* 计数器主体样式 */
.counter-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.counter-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  color: #a889c8;
}

.minus {
  background: #0000001a;
}

.minus-icon {
  width: 96rpx;
  height: 96rpx;
}

.plus {
  background: var(--main-bg-color);
}

.plus-icon {
  width: 96rpx;
  height: 96rpx;
}

.counter-number {
  color: #000000;
}

.number-container {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 计时器显示 */
.timer-display {
  text-align: center;
  font-size: 32rpx;
  color: var(--main-default-gray);
  margin-bottom: 52rpx;
}

/* 操作按钮 */
.operation-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.operation-buttons-left {
  display: flex;
  align-items: center;
}

.operation-buttons-right {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.target-count {
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 20rpx;
  display: flex;
}

.target-num {
  font-size: 40rpx;
  color: var(--main-color);
}

.operation-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999px;
}

.reset {
  background-color: var(--main-bg-color);
}

.reset-icon {
  width: 42rpx;
  height: 42rpx;
}

.timer-icon {
  width: 37rpx;
  height: 42rpx;
}

.timer-start {
  background-color: var(--main-bg-color);
}

.timer-stop {
  background-color: #0000001a;
}

/* 历史记录部分 */
.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  position: relative;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.history-title {
  display: flex;
  align-items: center;
}

.history-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.history-text {
  font-size: 16px;
  line-height: 22px;
  color: #00000066;
}

.clear-history {
  color: #a889c8;
  font-size: 14px;
  font-weight: 400;
}

::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
}

/* 微信小程序 scroll-view 隐藏滚动条 */
scroll-view {
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

scroll-view::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
}

.history-list {
  height: 328rpx;
  overflow-y: auto;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 0px;
}

.history-items-container {
  position: relative;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transform: translateX(0);
  opacity: 1;
  will-change: transform, opacity;
}

.history-item.slide-in {
  animation: slideInFromRight 0.3s ease-out;
}

@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }

  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.history-time {
  color: #999;
  flex: 2;
}

.history-action {
  color: #666;
  flex: 1;
  text-align: center;
}

.history-count {
  color: #a889c8;
  flex: 1;
  text-align: right;
}

.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 0 40rpx 0;
}

.empty-image {
  width: 360rpx;
  height: 360rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
}

.empty-history {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
}

.modal-content {
  padding: 40rpx;
}

.modal-content input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #a889c8;
  color: #fff;
}

/* 调整mp-dialog位置，避免被键盘遮挡 */
.weui-dialog {
  transform: translateY(-30vh);
  position: fixed;
  z-index: 5000;
}

/* 确保弹窗内容在移动后也居中显示 */
.weui-dialog__bd {
  padding: 0 30rpx 30rpx;
  min-height: 80rpx;
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
  color: #000000;
}

@media (min-width: 500px) {
  .counter-wrapper {
    padding: 22px;
    height: calc(100vh - 250px);
    margin-top: 4rpx;
    border-top: 2rpx solid #0000001a;
  }

  .counter-header {
    margin-bottom: 60px;
  }

  .counter-name {
    max-width: 160px;
    font-size: 16px;
    color: var(--main-default-gray);
  }

  .target-num {
    font-size: 22px;
  }

  .delete-icon {
    width: 23px;
    height: 23px;
    margin-right: 12px;
  }

  .target-count {
    flex-shrink: 0;
    color: #333333;
    font-size: 16px;
    font-weight: 500;
  }

  .counter-main {
    margin-bottom: 12px;
  }

  .counter-btn {
    width: 120px;
    height: 120px;
    font-size: 30px;
  }

  .plus-icon {
    width: 52px;
    height: 52px;
  }

  .minus-icon {
    width: 52px;
    height: 52px;
  }

  .timer-display {
    font-size: 16px;
    margin-bottom: 28px;
  }

  .operation-buttons-right {
    gap: 32px;
  }

  .history-icon {
    width: 16px;
    height: 16px;
  }

  .operation-btn {
    width: 40px;
    height: 40px;
  }

  .reset-icon {
    width: 22px;
    height: 22px;
  }

  .timer-icon {
    width: 18px;
    height: 22px;
  }

  .history-header {
    margin-bottom: 12px;
    font-size: 16px;
  }

  .history-item {
    padding: 12px 0;
    font-size: 12px;
    border-bottom: 1px solid #f5f5f5;
  }

  .empty-image {
    width: 200px;
    height: 200px;
    margin-bottom: 12px;
  }

  .modal-content {
    padding: 20px;
  }

  .modal-content input {
    padding: 12px;
  }
}