.counter-wrapper {
 padding: 44rpx;
}

/* 头部样式 */
.counter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 120rpx;
}

.counter-name-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.counter-name {
  font-size: 32rpx;
  color: #333;
}

.counter-delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 46rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.delete-text {
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 14px;
  line-height: 22px;
  color: #B22222E5;
}

.target-count {
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
}

/* 计数器主体样式 */
.counter-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.counter-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  color: #A889C8;
}

.minus {
  background: #0000001A;
}

.minus-icon {
  width: 96rpx;
  height: 96rpx;
}

.plus {
  background: var(--main-bg-color);
}

.plus-icon {
  width: 96rpx;
  height: 96rpx;
}


.counter-number {
  color: #000000;
}

.number-container {
  position: relative;
  width: 100%;
  height: 100%;
}


/* 计时器显示 */
.timer-display {
  text-align: center;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 52rpx;
}

/* 操作按钮 */
.operation-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.operation-buttons-left {
  display: flex;
  align-items: center;

}

.operation-buttons-right {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.target-count {
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 20rpx;
  display: flex;
}

.target-num {
  color: var(--main-color);
}

.operation-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999px;
}

.reset {
  background-color: var(--main-bg-color);
}

.reset-icon {
  width: 42rpx;
  height: 42rpx;
}

.timer {
  padding: 21rpx 21rpx 18rpx 21rpx;
}

.timer-icon {
  width: 37rpx;
  height: 42rpx;
}

.timer-start {
  background-color: var(--main-bg-color);
}

.timer-stop {
  background-color: #0000001A;
}

/* 历史记录部分 */
.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-history {
  color: #A889C8;
}

.history-list {
  max-height: 400rpx;
  overflow: hidden;
}

.history-items-container {
  position: relative;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transform: translateX(0);
  opacity: 1;
  will-change: transform, opacity;
}

.history-item.slide-in {
  animation: slideInFromRight 0.3s ease-out;
}

@keyframes slideInFromRight {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }

  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.history-time {
  color: #999;
  flex: 2;
}

.history-action {
  color: #666;
  flex: 1;
  text-align: center;
}

.history-count {
  color: #A889C8;
  flex: 1;
  text-align: right;
}

.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.empty-image {
  width: 360rpx;
  height: 360rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
}

.empty-history {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 目标行数输入弹窗 */
.target-input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  width: 80%;
  max-width: 600rpx;
}

.modal-title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.modal-content input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-buttons button {
  flex: 1;
  margin: 0;
  font-size: 28rpx;
}

.modal-buttons button:first-child {
  background: #f5f5f5;
  color: #666;
}

.modal-buttons button:last-child {
  background: #A889C8;
  color: #fff;
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}