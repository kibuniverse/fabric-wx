.memo-page {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

.memo-header {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.header-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.last-modified {
  font-size: 13px;
  color: #999999;
}

.header-actions {
  display: flex;
  align-items: center;
}

.header-btn {
  margin-left: 12px;
  padding: 6px 16px;
  font-size: 15px;
  border-radius: 4px;
}

.clear {
  background-color: #f5f5f5;
  color: #666666;
}

.confirm {
  background-color: var(--main-bg-color);
  color: var(--main-color);
}



.memo-content {
  flex: 1;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  font-size: 16px;
  line-height: 1.6;
}
