.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.settings-list {
  margin-top: 20rpx;
}

.setting-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.setting-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-title {
  font-size: 32rpx;
}

.arrow {
  color: #999;
}
