/* pages/home/home.wxss */
.home_container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  background-color: #FFFFFF;
}

/* 顶部标签导航栏 */
.tab-header {
  display: flex;
  position: relative;
  padding: 10rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #FFFFFF;
}

.tab {
  position: relative;
  padding: 20rpx 0;
  margin-right: 60rpx;
}

.tab text {
  font-size: 32rpx;
  color: #666;
}

.tab.active text {
  font-weight: bold;
  color: #8a7bec;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 6rpx;
  background-color: #8a7bec;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.tab-line.active {
  width: 40rpx;
}

/* 加号按钮 */
.add-btn {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  font-size: 48rpx;
  color: #333;
}

/* 导入选项弹出层 */
.import-options {
  position: absolute;
  top: 80rpx;
  right: 30rpx;
  width: 240rpx;
  background-color: #f5f1ff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  opacity: 0;
  transform: translateY(-20rpx);
  visibility: hidden;
  transition: all 0.3s;
  border-bottom: 1px solid #00000005;
}

.import-options.show {
  opacity: 1;
  transform: translateY(0);
  visibility: visible;
}

.import-option {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.option-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.import-option text {
  font-size: 28rpx;
  color: #333;
}

/* 内容区域 */
.content-area {
  flex: 1;
  overflow-y: auto;
}

.tab-content {
  height: 100%;
}

/* 空状态 */
.empty-state {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* 合并图解和文件网格 */
.items-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f1ff;
  position: relative;
}

.image-item {
  border-left: 3px solid #8a7bec;
}

.file-item {
  border-left: 3px solid #56bfb5;
}

.item image {
  width: 100%;
  height: 200rpx;
  display: block;
}

.item-info {
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.item-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 70%;
}

.item-type {
  font-size: 20rpx;
  color: #999;
  padding: 4rpx 8rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  margin-left: auto;
}

.item-more {
  font-size: 28rpx;
  color: #8a7bec;
  width: 60rpx;
  text-align: center;
  padding: 0 10rpx;
  margin-left: 10rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  z-index: 5;
  visibility: hidden;
}

.mask.show {
  visibility: visible;
}

/* 重命名输入框 */
.rename-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

/* 删除弹窗内容 */
.delete-modal-content {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 1.6;
}

/* 三个点栏目样式 */
.image-more, .file-more {
  font-size: 28rpx;
  color: #8a7bec;
  width: 60rpx;
  text-align: center;
  padding: 0 10rpx;
}