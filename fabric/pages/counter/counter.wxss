/* pages/counter/counter.wxss */
page {
  background-color: #ffffff;
  /* height: calc(100% - var(--tab-bar-height) - env(safe-area-inset-bottom)); */
  --tab-font-size: 16px;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.title-text {
  font-weight: 500;
  font-size: 52rpx;
  color: #000000;
}

.title-operate {
  display: flex;
  gap: 32rpx;
}

.operate-icon {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
}

.operate-icon-on {
  background-color: rgba(168, 137, 200, 0.1);
}

.operate-icon-off {
  background-color: rgba(0, 0, 0, 0.1);
}

.operate-icon-inner {
  width: 40rpx;
  height: 40rpx;
}

.tab-container {
  height: calc(100% - 140rpx);
}

.nav-class {
  background-color: red !important;
}

.tab-content {
  /* height: calc(100% - 60rpx); */
}

.custom-nav-left {
  width: 22rpx;
}

.custom-nav-right {
  width: 100rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.scroll-shadow {
  position: absolute;
  left: -28px;
  top: 0;
  width: 30px;
  height: 100%;
  background: linear-gradient(to right, transparent, rgba(255, 255, 255, 1));
  pointer-events: none;
}

.van-tab {
  flex: none !important;
  padding: 0 22rpx !important;
}

.van-tab:first-child {
  padding-left: 44rpx;
}

.tabs-header {
  position: relative;
  width: 100%;
  height: 100%;
}

.tab-content-container {
  width: 60rpx;
}

.add-counter-btn {
  position: absolute;
  right: 0rpx;
  top: -7rpx;
  width: 100rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right,
      rgba(255, 255, 255, 0),
      rgba(255, 255, 255, 1) 80%,
      rgba(255, 255, 255, 1));
}

.tab-line {
  position: absolute;
  top: 64rpx;
  left: 0rpx;
  width: 100%;
  height: 1px;
  background-color: #0000001a;
}

.tab-item {
  font-size: 32rpx !important;
}

.tab-custom-line {
  border: 1px sloid red;
}

.weui-tabs-bar__wrp {
  width: calc(100% - 70rpx) !important;
}

.add-icon {
  width: 44rpx;
  height: 44rpx;
}

.dialog-content input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
}

/* 隐藏所有滚动条（兼容微信小程序和主流浏览器） */
::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
}

/* 微信小程序 scroll-view 隐藏滚动条 */
scroll-view {
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

scroll-view::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
}

.my-tabs {
  z-index: 0 !important;
}

.van-sticky {
  position: relative;
  z-index: 0 !important;
}

.area {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  /* 让事件穿透到页面 */
  z-index: 999;
}

.ball {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 18rpx;
  box-sizing: border-box;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--main-bg-color);
  border-radius: 50%;
  pointer-events: auto;
  transition: opacity 0.3s;
   box-shadow: 0 2px 6px rgba(0, 0, 0, .15);
  /* 默认小阴影 */
  transition: box-shadow .3s ease, opacity 0.3s ease;
  /* 只有球本身可点 */
}


.ball:hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, .25);
  /* 悬浮：更远+更虚+更深 */
  transform: translateY(-4px);
  /* 可选：轻微“抬起” */
}

.ball image {
  width: 40rpx;
  height: 40rpx;
}

.ball text {
  font-size: 16rpx;
  color: var(--highlight-brand-color);
}

.levitate-count {
  width: 478rpx;
  height: 232rpx;
  padding: 32rpx;
}

.repeat-counter {
  position: fixed;         /* 固定定位，脱离文档流 */
  left: 50%;               /* 水平居中 */
  bottom: 114rpx;           /* 距离底部40rpx，可根据需要调整 */
  top: auto;               /* 取消top居中 */
  transform: translateX(-50%); /* 只在水平方向居中 */
  z-index: 100;           /* 保持在当前层级 */
  width: 480rpx;
  height: 232rpx;
  display: flex;
  flex-direction: row;
}

.connect-counter-left {
  width: 378rpx;
  height: 232rpx;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border: 2rpx solid #E6E6FA;
  display: flex;
  flex-direction: column;
  border-right: none; /* 不描边左侧 */
  align-items: center;      /* 水平居中内容 */
  justify-content: flex-start;
  position: relative;
  
}
.content-counter-right {
  width: 100rpx;
  height: 232rpx;
  border: 2rpx solid #E6E6FA;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  border-left: none; /* 不描边左侧 */
  background-color: #E6E6FA;
  display: flex;
  align-items: center;      /* 垂直居中内容 */
  justify-content: center;  /* 水平居中内容 */
}

.content-counter-number {
  font-size: 32rpx;
  color: #000000;
  text-align: center;
  margin-top: 32rpx;
}

.content-counter-repeat {
  font-size: 32rpx;
  color: #6A0DAD;
  text-align: center;
}

.counter-repeat {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.counter-repeat-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.counter-repeat-number {
  width: 114rpx;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.repeat-minus-icon {
  width: 64rpx;
  height: 64rpx;
}

.plus {
  background: var(--main-bg-color);
}

.minus {
  background: #0000001a;
}
.repeat-counter-close {
  width: 68rpx;
  height: 68rpx;
  position: absolute;    /* 绝对定位 */
  top: 0rpx;
  right: 10rpx;
  z-index: 9999;
}

.modal-content-input {
  width: 100%;
  text-align: center;
}

.modal-content {
  margin: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
