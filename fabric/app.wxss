/**app.wxss**/

page {
  --main-color: #A889C8;
  --main-bg-color: #E6E6FA;
  --td-brand-color: #A889C8;
  --main-default-black: #212121ff;
  --main-default-gray: #00000066;
  --tab-bar-height: 96rpx;
  background-color: #E6E6FA;
}

/* iPad 适配：所有 rpx 值缩小为原来的 50% */
@media (min-width: 750px) {
  page {
    --main-color: #A889C8;
    --main-bg-color: #E6E6FA;
    --td-brand-color: #A889C8;
    --main-default-black: #212121ff;
    --main-default-gray: #00000066;
    --tab-bar-height: 48px;
  }
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.weui-dialog {
  transform: translateY(-80%);
}